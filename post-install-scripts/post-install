  if [[ $pre = "pre_default" || $pre = "y" ]]; then

    echo -e $BLUE"Installing prerequisites.."$ENDCOLOR;
    echo ""
    sudo apt-get install libpcap-dev aircrack-ng sqlite3 libsqlite3-dev libssl-dev -y
    echo ""
    echo ""	

  else

    echo -e $YELLOW"Okay. Maybe later."$ENDCOLOR;
    echo ""

