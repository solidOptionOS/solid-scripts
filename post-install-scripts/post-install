  echo -e $YELLOW"Patching Wifite with Reaver and Pixiewps"$ENDCOLOR;
  echo ""
  echo ""

  if [[ ! -e $HOMEPATH/backup ]] ; then
    
    mkdir -p $HOMEPATH/backup
        
  fi

